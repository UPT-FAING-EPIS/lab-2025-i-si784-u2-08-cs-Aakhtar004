<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <DocumentationFile>bin\$(Configuration)\$(TargetFramework)\Calculator.Domain.xml</DocumentationFile>

    <!-- NuGet Package Properties -->
    <PackageId>Calculator.Domain</PackageId>
    <Version>2022.0742.61</Version>
    <Authors>SI784-2025</Authors>
    <Company>Universidad Privada de Tacna</Company>
    <Product>Calculator Domain</Product>
    <Description>Calculadora básica con operaciones aritméticas fundamentales</Description>
    <PackageTags>calculator;math;arithmetic</PackageTags>
    <RepositoryUrl>https://github.com/tu-usuario/tu-repositorio</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageRequireLicenseAcceptance>false</PackageRequireLicenseAcceptance>
  </PropertyGroup>

</Project>
